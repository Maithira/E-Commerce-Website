{
  "name": "shop-app",
  "private": true,
  "workspaces": [
    "packages/*",
    "scripts"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm --workspace packages/backend run dev",
    "dev:frontend": "npm --workspace packages/frontend run dev",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "npm --workspace packages/backend run build",
    "build:frontend": "npm --workspace packages/frontend run build",
    "lint": "npm-run-all lint:backend lint:frontend",
    "lint:backend": "npm --workspace packages/backend run lint",
    "lint:frontend": "npm --workspace packages/frontend run lint",
    "test": "npm-run-all test:backend test:frontend",
    "test:backend": "npm --workspace packages/backend run test",
    "test:frontend": "npm --workspace packages/frontend run test",
    "seed": "node scripts/seed.js",
    "start": "npm --workspace packages/backend start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}

